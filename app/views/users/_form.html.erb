
<div class="container-fluid bg-info pt-5 pb-5 card shadow mt-5">
  <%= form_with(model: user) do |form| %>

      <% if user.errors.any? %>
        <div  class="alert alert-danger alert-dismissible fade show" role="alert">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            
        </div>
      <% end %>

    <div class="mb-3 form-group row">
      <div class="col-sm-2 col-form-label">
        <%= form.label :username, class: "form-label text-light" %>
      </div>
      <div class="col-sm-10">
        <%= form.text_field :username, class: "form-control shadow", placeholder: "Enter a Username" %>
      </div>
    </div>
    <div class="mb-3 form-group row">
      <div class="col-sm-2 col-form-label">
        <%= form.label :email, class: "form-label text-light" %>
      </div>
      <div class="col-sm-10">
        <%= form.email_field :email, class: "form-control shadow", placeholder: "Enter Email Address" %>
      </div>
    </div>
    <div class="mb-3 form-group row">
      <div class="col-sm-2 col-form-label">
        <%= form.label :password, class: "form-label text-light" %>
      </div>
      <div class="col-sm-10">
        <%= form.password_field :password, class: "form-control shadow", placeholder: "Enter a Password" %>
      </div>
    </div>
    <div>
      <%= form.submit "Sign Up", class: "btn btn-outline-light shadow" %>
    </div>
  <% end %>
</div>

