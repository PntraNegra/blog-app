<div class="container">
    <h1 class="text-center">Log In</h1>
    <div class="container-fluid bg-info pt-5 pb-5 card shadow mt-5">
        <%= form_with(scope: :session, url: login_path ) do |form| %>
            <% if notice %>
                <div  class="alert alert-danger alert-dismissible fade show m-2" role="alert">
                    <p><%= notice %></p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% end %>
            <div class="mb-3 form-group row">
                <div class="col-sm-2 col-form-label">
                    <%= form.label :email, class: "form-label text-light" %>
                </div>
                <div class="col-sm-10">
                    <%= form.email_field :email, class: "form-control shadow", placeholder: "Enter Email Address" %>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <div class="col-sm-2 col-form-label">
                    <%= form.label :password, class: "form-label text-light" %>
                </div>
                <div class="col-sm-10">
                    <%= form.password_field :password, class: "form-control shadow", placeholder: "Enter your Password" %>
                </div>
            </div>
            <div>
            <%= form.submit "Login", class: "btn btn-outline-light shadow" %>
            </div>
        <% end %>
    </div>
    <%= link_to "No account? Sign Up!", signup_path %>
</div>