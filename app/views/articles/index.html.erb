<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody id="articles">
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "Show this article", article %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to "New article", new_article_path %>
